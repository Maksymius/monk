rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Разрешить запись всем (для лендинга)
    // Разрешить чтение только авторизованным пользователям (для админки)
    
    match /offer-requests/{document} {
      allow write: if true;
      allow read: if request.auth != null;
    }
    
    match /contact-requests/{document} {
      allow write: if true;
      allow read: if request.auth != null;
    }
    
    match /test/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Для всех остальных документов - запретить доступ
    match /{document=**} {
      allow read, write: if false;
    }
  }
}